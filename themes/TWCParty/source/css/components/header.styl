$siteAColor = #ffffff
$siteABgColor = #F03838
$siteDescColor = #9e9e9e

header
  line-height 1.8rem
  padding 0 0 3.2rem 0
  border-bottom 2px dashed $siteABgColor

  .site-branding
    text-align center
    margin-bottom 2rem
    font-family "Open Sans", arial, sans-serif
    letter-spacing 0.1em
    text-transform uppercase

    .site-title
      margin 0
      font-size 1.4rem

      a
        display inline-block
        font-weight bolder
        padding 0 1rem
        -webkit-transition padding 0.3s ease-out
        transition padding 0.3s ease-out
        background-image url(../images/logo.png)
        background-repeat no-repeat
        background-position center
        width 200px
        height 200px
        background-size 200px
        font-size 0

        &:hover
          padding: 0 1.5rem

    .site-description
      color $siteDescColor
      font-size 0
      margin 0

  .site-navigation
    text-align center

    ul
      list-style none
      padding 0
      margin 0
      font-size 1.6em

      li
        display inline-block
        margin 0 0.5rem

        a
          display block
          color $siteABgColor
          font-size 1.6rem
          line-height 2rem
          padding 0 1rem
